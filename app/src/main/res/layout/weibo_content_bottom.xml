<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/weibo_source"
        android:text="weibo_source"
        android:textColor="@android:color/darker_gray"
        android:textSize="@dimen/text_size_10sp"
        android:layout_marginTop="10dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/attitude"
            android:src="@drawable/timeline_item_like_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/attitude_count"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_10sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reposts"
            android:src="@drawable/timeline_item_forward_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reposts_count"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_10sp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment"
            android:src="@drawable/timeline_item_commented_icon"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comment_count"
            android:textColor="@android:color/darker_gray"
            android:textSize="@dimen/text_size_10sp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeline_more"
            android:src="@drawable/timeline_more_button"/>

    </LinearLayout>

</LinearLayout>